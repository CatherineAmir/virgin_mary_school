<!--&lt;!&ndash;                                    <h5 class="d-flex align-items-baseline mb-0">&ndash;&gt;-->
<!--&lt;!&ndash;&lt;!&ndash;                                        <field name="title" options="{'no_create': True}" placeholder="Title"/>&ndash;&gt;&ndash;&gt;-->
<!--&lt;!&ndash;                                    </h5>&ndash;&gt;-->

<!--&lt;!&ndash;                                    <div class="d-flex align-items-baseline w-md-50">&ndash;&gt;-->
<!--&lt;!&ndash;                                        <i class="fa fa-fw me-1 fa-envelope text-primary" title="Email"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                        <field name="email" class="w-100" widget="email" placeholder="Email"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                    </div>&ndash;&gt;-->
<!--&lt;!&ndash;                                    <div class="d-flex align-items-baseline w-md-50">&ndash;&gt;-->
<!--&lt;!&ndash;                                        <i class="fa fa-fw me-1 fa-phone text-primary" title="Phone"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                        <field name="phone" class="w-100" widget="phone" placeholder="Phone"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                    </div>&ndash;&gt;-->

<!--&lt;!&ndash;                                </div>&ndash;&gt;-->
<!--                            </div>-->
<!--                        </div>-->
<!--                        <br/>-->


                        <group>
                            <group>
                                  <field name="place_of_birth"/>
                                    <field name="gender"/>
                                    <field name="religion"/>
                                    <field name="transportation"/>


                            </group>
                            <group>
                                 <field name="is_enrolled_student" readonly="1"/>
                                <field name="grade_id"/>
                                <field name="previous_school_name"/>
                                <field name="current_academic_year"/>
                                <field name="national_id"/>
                                <field name="nationality"/>

                                <field name="birth_date"/>
                                <label for="age_on_october"/>
                                        <field name="date_required"/>
                                <div class="oe_inline">
                                    <field name="age_year" class="oe_inline"/> Years

                                    <field name="age_month" class="oe_inline"/> Months
                                    <field name="age_day" class="oe_inline"/> Days
                                   </div>


                                <field name="age_on_october"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Personal">
                                <group>
                                <field name="stage_id"/>
                                <field name="partner_id" required="0"/>
                                <field name="user_id"/>
                                </group>
                            </page>
                            <page string="Address &amp; Notes">
                                <group>
                                    <field name="parent_marital_status"/>
                                    <field name="legal_custodian"/>
                                    <field name="detailed_address" colspan="2"/>
                                </group>
                            </page>
                            <page string="Siblings Data">
                                <group>
                            <field name="number_of_brothers"/>
                            <field name="number_of_sisters"/>
                                </group>
                                <group>
                                    <field name="siblings_ids">
                                        <list string="Siblings" create="true" edit="true" delete="true">
                                            <field name="student_id" column_invisible="1"/>
                                            <field name="name"/>
                                            <field name="grade_id"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                        </notebook>

                        <chatter/>
>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view -->
        <record id="view_vm_student_search" model="ir.ui.view">
            <field name="name">vm_student_search</field>
            <field name="model">vm.student</field>
            <field name="arch" type="xml">
                <search string="Students">
                    <field name="name"/>
                    <field name="national_id"/>
<!--                    <field name="stage_id"/>-->
                    <field name="nationality"/>
                    <field name="gender"/>
<!--                    <field name="user_id"/>-->

<!--                    <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>-->
<!--                    <filter string="Enrolled" name="filter_enrolled" domain="[('is_enrolled_student', '=', True)]"/>-->

<!--                    <group expand="0" string="Group By">-->
<!--                        <filter string="Stage" domain="[]" context="{'group_by':'stage_id'}"/>-->
<!--                        <filter string="Nationality" domain="[]" context="{'group_by':'nationality'}"/>-->
<!--                        <filter string="Gender" domain="[]" context="{'group_by':'gender'}"/>-->
<!--                    </group>-->
                </search>
            </field>
        </record>

        <!-- Action and Menu -->
        <record id="action_vm_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">vm.student</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_vm_student_tree"/>
            <field name="domain">[("is_enrolled_student","=",True)]</field>
        </record>

        <record id="action_vm_application_student" model="ir.actions.act_window">
            <field name="name">Students Application</field>
            <field name="res_model">vm.student</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_vm_student_tree"/>
            <field name="domain">[("is_enrolled_student","=",False)]</field>
        </record>


    </data>
</odoo>
