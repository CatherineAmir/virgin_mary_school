<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
       <record id="student_stage_form_view" model="ir.ui.view">
            <field name="name">student_stage.form</field>
            <field name="model">student.stages</field>
            <field name="arch" type="xml">
                <form string="Stage">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_enrolled_student" />
                        </group>
                        <group>
                            <field name="mail_template_id"/>
                        </group>
                    </group>
                </sheet>
                </form>
            </field>
        </record>

        <record id="student_stages_tree_view" model="ir.ui.view">
            <field name="name">student.stages.tree</field>
            <field name="model">student.stages</field>
            <field name="arch" type="xml">
                <list string="Student Stages">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>

                </list>
            </field>
        </record>

        <record id="student_stage_view" model="ir.ui.view">
            <field name="name">student_stages_search</field>
            <field name="model">student.stages</field>
            <field name="arch" type="xml">
                <search string="Student Stages">

                        <field  name="name"/>

               </search>
            </field>
        </record>

        <record id="student_stages_act_window" model="ir.actions.act_window">
            <field name="name">Student Stages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.stages</field>

            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>
         <menuitem name="Virgin Mary School" id="virgin_mary_school_menu" sequence="10"/>
        <menuitem name="Configuration" id="configuration_menu" parent="virgin_mary_school_menu" sequence="100"/>


        <menuitem name="Stages" id="student_stages" parent="configuration_menu" action="student_stages_act_window"/>

    </data>
</odoo>