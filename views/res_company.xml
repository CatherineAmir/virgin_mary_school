<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View -->
    <record id="res_company_view_form" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit.module</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='branches']" position="after">
                <page name="Vision" string="Vision">
                    <group>
                        <field name="vision" nolabel="1"/>
                    </group>
                </page>

                 <page name="Mission" string="Mission">
                    <group>
                        <field name="mission" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
            <!-- Add fields to an existing group -->

    </record>
    
    <!-- Inherit List View -->

</odoo>