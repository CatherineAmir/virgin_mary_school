<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View -->
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.module</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add fields to an existing group -->
       <xpath expr="//field[@name='company_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='company_type']" position="after">
                <div class="d-flex align-items-md-center gap-md-3 flex-column flex-md-row">
                    <field name="company_type" widget="radio" options="{'horizontal': true}"/>
                    <div class="d-flex flex-row">
                        <field name="is_parent" nolabel="1"/>
                        <label for="is_parent" class="me-3">Parent</label>
                    </div>
                    <div class="d-flex flex-row">
                        <field name="is_student" nolabel="1"/>
                        <label for="is_student">Student</label>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
    <!-- Inherit List View -->

</odoo>