<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="parent_view_view_form" model="ir.ui.view">
        <field name="name">parent.view.form</field>
        <field name="model">vm.parent</field>
        <field name="arch" type="xml">
            <form string="Parent_view">
                <sheet>
                     <label string="Parent name" for="name"/>
                        <h1>
                            <field name="name" class="oe_title"/>
                        </h1>
                    <group>

                        <group>
                            <field name="email"/>
                             <field name="mobile"/>
                            <field name="national_id"/>
                        </group>
                    <group>
                            <field name="relationship_id"/>
                            <field name="address"/>


                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids"/>
                                <!-- Page content goes here -->
                            </page>
                        </notebook>

                        <chatter/>


                        <!-- Add your fields here -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- List View -->
    <record id="parent_view_view_list" model="ir.ui.view">
        <field name="name">parent.view.view.list</field>
        <field name="model">vm.parent</field>
        <field name="arch" type="xml">
            <list string="Parent_view">
                <field name="name"/>
                <field name="email"/>
                <field name="relationship_id"/>
                <field name="mobile"/>


                <!-- Add your fields here -->
            </list>
        </field>
    </record>
    
    <!-- Action -->
    <record id="parent_view_action" model="ir.actions.act_window">
        <field name="name">Parent view</field>
        <field name="res_model">vm.parent</field>
        <field name="view_mode">list,form</field>

    </record>
    
    <!-- Menu -->

</odoo>